<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="promo_message_widget" class="Ammi\PromoWidget\Block\Widget\PromoMessage" >
        <label>Promo Message Widget</label>
        <description>Affiche un message promotionnel sur la page produit</description>
        <parameters>
            <parameter name="message_text" xsi:type="text" label="Message Promotionnel" required="true"/>
            <parameter name="background_color" xsi:type="text" label="Couleur de fond" required="false"/>
        </parameters>
    </widget>
</widgets>
